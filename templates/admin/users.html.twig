{% extends 'base.html.twig' %}

{% block title %}Tous les utilisateurs{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-2">
            <a href="{{ path('admin') }}" class="btn btn-primary">Retour</a>
        </div>
        <div class="col-10">
            <h2>Liste des utilisateurs</h2>
            <ul>
                {% for user in users %}
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>{{ user.username }}</td>
                        </tr>
                        </tbody>
                    </table>
                {% endfor %}
            </ul>

        </div>
    </div>

{% endblock %}